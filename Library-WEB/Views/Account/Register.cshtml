@{
    ViewData["Title"] = "Register";
}
@model RegisterDTO

<section class="py-5">
    <div class="container py-5">
        <div class="row mb-4 mb-lg-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <p class="fw-bold text-success mb-2">Sign up</p>
                <h2 class="fw-bold">Welcome</h2>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 col-xl-4">
                <div class="card">
                    <div class="card-body text-center d-flex flex-column align-items-center">
                        <div class="bs-icon-xl bs-icon-circle bs-icon-primary shadow bs-icon my-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-person">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664z"></path>
                            </svg>
                        </div>
                        <form asp-action="Register" data-bs-theme="light">
                            <div class="mb-3">
                                <label asp-for="FirstName" class="form-label">Name</label>
                                <input asp-for="FirstName" class="form-control item" type="text" data-bs-theme="light">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="LastName" class="form-label">Surname</label>
                                <input asp-for="LastName" class="form-control item" type="text" data-bs-theme="light">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Username" class="form-label">Username</label>
                                <input asp-for="Username" class="form-control item" type="text" data-bs-theme="light">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control item" type="email" data-bs-theme="light">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class=" form-label" for="password">Password</label>
                                <input asp-for="Password" class=" form-control item" type="password" data-bs-theme="light">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="card-footer d-flex align-items-center justify-content-between" style="height:50px;">
                                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
                                <button asp-controller="Account" asp-action="Register" type="submit" class="btn btn-primary shadow d-block w-100">Sign Up</button>
                            </div>
                        </form>
                        <p class="text-muted">Already have an account?&nbsp;<a asp-controller="Account" asp-action="Login">Log in</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>